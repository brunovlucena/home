helm repo add ngrok https://charts.ngrok.com
helm repo update

export NGROK_AUTHTOKEN=31cMiJJTTpoIUWUUH0aaT7Ai9Nu_7L3qdcp8ESq2v3NkdzhuS
export NGROK_API_KEY=31cg8DBu9N6GkZtSPF7A2iZlov5_7CqppL1SWJySVbVA4LWzC

helm install ngrok-operator ngrok/ngrok-operator \
  --namespace ngrok-operator \
